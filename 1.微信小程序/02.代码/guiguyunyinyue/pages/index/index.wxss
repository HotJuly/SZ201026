/* pages/index/index.wxss */
.indexContainer swiper{
  height:300rpx;
}

.indexContainer swiper .huahua{
  width:100%;
  height:100%;
  /* height:600rpx; */
}

.indexContainer .nav{
  display:flex;
}

.indexContainer .nav .navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  /* flex-grow:1; */
}

.indexContainer .nav .navItem .iconfont{
  font-size:50rpx;
  width:100rpx;
  height:100rpx;
  color:white;
  background:rgb(240, 19, 19);
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  margin:20rpx 0;
  /* padding:20rpx 0; */
}

.indexContainer .nav .navItem .text{
  font-size:28rpx;
}

.recommendContainer{
  padding:0 20rpx;
}

.recommendScroll{
  display:flex;
  height:300rpx;
}

.recommendScroll .recommendItem{
  margin-right:20rpx;
}

.recommendScroll .recommendItem .nvshen{
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx;
}

.recommendScroll .recommendItem view{
  /* 
    单行文本溢出隐藏
      1.实现单行文本  white-space:nowrap
      2.实现溢出隐藏  overflow:hidden
      3.实现文本溢出样式  text-overflow:ellipsis;

    面试题:如何实现多行文本溢出隐藏
      overflow:hidden;
      display:-webkit-box;
      设置几行溢出隐藏 
        -webkit-line-clamp:2;
      告知文本排列方向
      -webkit-box-orient:vertical;
   */
   width:200rpx;
   /* white-space:nowrap;
   overflow:hidden;
   text-overflow:ellipsis; */
   overflow:hidden;
   display:-webkit-box;
   /* 设置几行溢出隐藏 */
   -webkit-line-clamp:2;
   /* 告知文本排列方向 */
   -webkit-box-orient:vertical;
}